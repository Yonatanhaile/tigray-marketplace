{
  "name": "tigray-marketplace",
  "version": "1.0.0",
  "description": "Production-ready regional marketplace with offline payment intents",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "worker"
  ],
  "scripts": {
    "install:all": "npm install && npm install --workspace=client && npm install --workspace=server && npm install --workspace=server",
    "dev:server": "npm run dev --workspace=server",
    "dev:worker": "npm run dev --workspace=worker",
    "dev:client": "npm run dev --workspace=client",
    "build:server": "npm run build --workspace=server",
    "build:worker": "npm run build --workspace=worker",
    "build:client": "npm run build --workspace=client",
    "test": "npm test --workspaces",
    "test:server": "npm test --workspace=server",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "marketplace",
    "regional",
    "ethiopia",
    "intent-based",
    "socket.io"
  ],
  "author": "",
  "license": "MIT"
}

